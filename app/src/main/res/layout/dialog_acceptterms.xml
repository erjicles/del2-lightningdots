<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
	android:paddingRight="@dimen/activity_horizontal_margin"
	android:paddingBottom="@dimen/activity_vertical_margin"
	android:theme="@style/TermsTheme"
    android:orientation="vertical">
    
    <WebView 
        android:id="@+id/dialog_acceptterms_webview_message"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
	
	<View
        android:layout_width="match_parent"
		android:layout_height="1dp"
		android:background="@android:color/darker_gray"/>
	
	<CheckBox 
	    android:id="@+id/dialog_acceptterms_checkbox_accept"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:text="@string/dialog_accepttermsnointernet_checkboxlabel"/>
	
	<Button 
	    android:id="@+id/dialog_acceptterms_button_accept"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:enabled="false"
	    android:text="@string/dialog_accepttermsnointernet_accept" />
</LinearLayout>