<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/MenuItemStore">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/menu_item_store_title"
            style="@style/MenuItemStoreTitle"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@string/menu_item_store_purchased_default_title" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/store_bolt_yellow"
            android:contentDescription="@string/menu_item_store_purchased_default_description"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/store_bolt_yellow"
            android:contentDescription="@string/menu_item_store_purchased_default_description"/>

    </LinearLayout>

    <TextView
        android:id="@+id/menu_item_store_description"
        style="@style/MenuItemStoreText"
        android:text="@string/menu_item_store_purchased_default_description"/>

</LinearLayout>