<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <item name="android:windowBackground">@drawable/menu_background_tile</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Splash screen -->
    <style name="SplashTheme" parent="AppTheme">
        <item name="android:background">@color/black</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <!-- Terms of service screen -->
    <style name="TermsTheme" parent="AppTheme">
        <item name="android:background">@color/LightGrey</item>
    </style>

    <style name="MainScrollView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingTop">@dimen/activity_vertical_margin</item>
        <item name="android:paddingBottom">@dimen/activity_vertical_margin</item>
        <item name="android:scrollbars">vertical</item>
    </style>

    <style name="MainLinearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="MainMenuSectionHeader">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/yellow</item>
    </style>

    <style name="MainMenuSection">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@drawable/mainactivity_menu_shape</item>
        <item name="android:textColor">@color/DarkOrange</item>
    </style>

    <style name="MainMenuSectionSubsection">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/activity_vertical_margin</item>
        <item name="android:layout_marginBottom">@dimen/activity_vertical_margin</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@drawable/mainactivity_menu_submenu_shape</item>
        <item name="android:textColor">@color/DarkOrange</item>
    </style>

    <style name="MainMenuSectionSubsectionClickable" parent="MainMenuSectionSubsection">
        <item name="android:clickable">true</item>

    </style>

    <style name="MainMenuSectionSubsectionText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/DarkCyan</item>
    </style>

    <style name="MainMenuSectionSubsectionTitle" parent="MainMenuSectionSubsectionText">
        <item name="android:textStyle">bold</item>
    </style>


    <style name="MenuItemStore">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/activity_vertical_margin</item>
        <item name="android:layout_marginBottom">@dimen/activity_vertical_margin</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@drawable/mainactivity_menu_submenu_shape</item>
        <item name="android:textColor">@color/DarkOrange</item>
    </style>

    <style name="MenuItemStoreText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/DarkCyan</item>
    </style>

    <style name="MenuItemStoreTitle" parent="MenuItemStoreText">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MenuItemStorePrice" parent="MenuItemStoreTitle">
        <item name="android:textColor">@color/Orange</item>
    </style>

</resources>
